<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="MailApp">

  <!-- IMPORTANT! Id must be unique for your add-in, if you reuse this manifest ensure that you change this id to a new GUID. -->
  <Id>6112f9eb-8184-4076-ae1d-36596ae16d27</Id>

  <!--Version. Updates from the store only get triggered if there is a version change. -->
  <Version>1.0.0</Version>
  <ProviderName>GrammarSoft ApS</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  <DisplayName DefaultValue="Kommatroll" />
  <Description DefaultValue="Kommatroll" />
  <IconUrl DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-64.png" />
  <HighResolutionIconUrl DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-128.png" />

  <SupportUrl DefaultValue="https://kommatroll.com/help" />
  <AppDomains>
    <AppDomain>kommatroll.com</AppDomain>
    <AppDomain>gramtrans.com</AppDomain>
    <AppDomain>grammarsoft.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/html/sidebar.html?host=outlook" />
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="GS.CDEU.Group1">
                <Label resid="GS.CDEU.Group1Label" />
                <Control xsi:type="Button" id="GS.CDEU.TaskpaneButton">
                  <Label resid="GS.CDEU.TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="GS.CDEU.TaskpaneButton.Label" />
                    <Description resid="GS.CDEU.TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="GS.CDEU.logo16" />
                    <bt:Image size="32" resid="GS.CDEU.logo32" />
                    <bt:Image size="64" resid="GS.CDEU.logo64" />
                    <bt:Image size="80" resid="GS.CDEU.logo80" />
                    <bt:Image size="128" resid="GS.CDEU.logo128" />
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="GS.CDEU.Taskpane" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="GS.CDEU.logo16" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-16.png" />
        <bt:Image id="GS.CDEU.logo32" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-32.png" />
        <bt:Image id="GS.CDEU.logo64" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-64.png" />
        <bt:Image id="GS.CDEU.logo80" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-80.png" />
        <bt:Image id="GS.CDEU.logo128" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/imgs/logo-128.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GS.CDEU.Taskpane" DefaultValue="https://kommatroll.com/gas/comma-deu/1.0.0/html/sidebar.html?host=outlook" />
      </bt:Urls>
      <!-- ShortStrings max characters==125. -->
      <bt:ShortStrings>
        <bt:String id="GS.CDEU.TaskpaneButton.Label" DefaultValue="Kommatroll" />
        <bt:String id="GS.CDEU.Group1Label" DefaultValue="Kommatroll" />
      </bt:ShortStrings>
      <!-- LongStrings max characters==250. -->
      <bt:LongStrings>
        <bt:String id="GS.CDEU.TaskpaneButton.Tooltip" DefaultValue="Hier klicken um Kommatroll zu starten" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
