<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">

  <!-- IMPORTANT! Id must be unique for your add-in, if you reuse this manifest ensure that you change this id to a new GUID. -->
  <Id>fa9e1dcc-6133-4351-86b8-f0da7f28ad6c</Id>

  <!--Version. Updates from the store only get triggered if there is a version change. -->
  <Version>1.0.0.0</Version>
  <ProviderName>GrammarSoft ApS</ProviderName>
  <DefaultLocale>da-DK</DefaultLocale>
  <DisplayName DefaultValue="Grammateket" />
  <Description DefaultValue="Grammateket" />
  <IconUrl DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />

  <SupportUrl DefaultValue="https://grammarsoft.com/" />
  <AppDomains>
    <AppDomain>retmig.dk</AppDomain>
    <AppDomain>kommaer.dk</AppDomain>
    <AppDomain>gramtrans.com</AppDomain>
    <AppDomain>grammarsoft.com</AppDomain>
    <AppDomain>mv-nordic.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Document" />
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://retmig.dk/gas/dev/html/sidebar-mso.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="Danproof.GetStarted.Title"/>
            <Description resid="Danproof.GetStarted.Description"/>
            <LearnMoreUrl resid="Danproof.GetStarted.LearnMoreUrl"/>
          </GetStarted>

          <FunctionFile resid="Danproof.FunctionFile" />

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="Danproof.Group1">
                <Label resid="Danproof.Group1Label" />
                <!-- Icons. Required sizes 16,32,80, optional 20, 24, 40, 48, 64. Strongly recommended to provide all sizes for great UX. -->
                <!-- Use PNG icons. All URLs on the resources section must use HTTPS. -->
                <Icon>
                  <bt:Image size="16" resid="Danproof.tpicon_16x16" />
                  <bt:Image size="32" resid="Danproof.tpicon_32x32" />
                  <bt:Image size="80" resid="Danproof.tpicon_80x80" />
                </Icon>

                <Control xsi:type="Menu" id="Danproof.TaskpaneMenu">
                  <Label resid="Danproof.TaskpaneMenu.Label" />
                  <Supertip>
                    <Title resid="Danproof.TaskpaneMenu.Label" />
                    <Description resid="Danproof.TaskpaneMenu.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Danproof.tpicon_16x16" />
                    <bt:Image size="32" resid="Danproof.tpicon_32x32" />
                    <bt:Image size="80" resid="Danproof.tpicon_80x80" />
                  </Icon>

                  <Items>
                    <Item id="Danproof.GrammarMenu">
                      <Label resid="Danproof.GrammarLabel"></Label>
                      <Supertip>
                        <Title resid="Danproof.GrammarTipTitle"></Title>
                        <Description resid="Danproof.GrammarTipText"></Description>
                      </Supertip>
                      <Action xsi:type="ShowTaskpane">
                        <SourceLocation resid="Danproof.GrammarPane"></SourceLocation>
                      </Action>
                    </Item>
                    <Item id="Danproof.CommaMenu">
                      <Label resid="Danproof.CommaLabel"></Label>
                      <Supertip>
                        <Title resid="Danproof.CommaTipTitle"></Title>
                        <Description resid="Danproof.CommaTipText"></Description>
                      </Supertip>
                      <Action xsi:type="ShowTaskpane">
                        <SourceLocation resid="Danproof.CommaPane"></SourceLocation>
                      </Action>
                    </Item>
                    <Item id="Danproof.OptionsMenu">
                      <Label resid="Danproof.OptionsLabel"></Label>
                      <Supertip>
                        <Title resid="Danproof.OptionsTipTitle"></Title>
                        <Description resid="Danproof.OptionsTipText"></Description>
                      </Supertip>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>impl_showOptions</FunctionName>
                      </Action>
                    </Item>
                  </Items>

                  <!--
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Danproof.GrammarPane" />
                  </Action>
                  -->
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Danproof.tpicon_16x16" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
        <bt:Image id="Danproof.tpicon_32x32" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
        <bt:Image id="Danproof.tpicon_80x80" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Danproof.GrammarPane" DefaultValue="https://retmig.dk/gas/dev/html/sidebar-mso.html?tool=Grammar" />
        <bt:Url id="Danproof.CommaPane" DefaultValue="https://retmig.dk/gas/dev/html/sidebar-mso.html?tool=Comma" />
        <bt:Url id="Danproof.GetStarted.LearnMoreUrl" DefaultValue="https://grammarsoft.com/" />
        <bt:Url id="Danproof.FunctionFile" DefaultValue="https://retmig.dk/gas/dev/html/functions-mso.html" />
      </bt:Urls>
      <!-- ShortStrings max characters==125. -->
      <bt:ShortStrings>
        <bt:String id="Danproof.TaskpaneMenu.Label" DefaultValue="Show Taskpane" />
        <bt:String id="Danproof.Group1Label" DefaultValue="Commands Group" />
        <bt:String id="Danproof.GetStarted.Title" DefaultValue="Get started with your sample add-in!" />
        <bt:String id="Danproof.GrammarLabel" DefaultValue="Grammateket" />
        <bt:String id="Danproof.CommaLabel" DefaultValue="Kommaforslag" />
        <bt:String id="Danproof.OptionsLabel" DefaultValue="Indstillinger" />
        <bt:String id="Danproof.GrammarTipTitle" DefaultValue="Grammateket" />
        <bt:String id="Danproof.CommaTipTitle" DefaultValue="Kommaforslag" />
        <bt:String id="Danproof.OptionsTipTitle" DefaultValue="Indstillinger" />
      </bt:ShortStrings>
      <!-- LongStrings max characters==250. -->
      <bt:LongStrings>
        <bt:String id="Danproof.TaskpaneMenu.Tooltip" DefaultValue="Click to Show a Taskpane" />
        <bt:String id="Danproof.GetStarted.Description" DefaultValue="Your sample add-in loaded succesfully. Go to the HOME tab and click the 'Show Taskpane' button to get started." />
        <bt:String id="Danproof.GrammarTipText" DefaultValue="Grammateket" />
        <bt:String id="Danproof.CommaTipText" DefaultValue="Kommaforslag" />
        <bt:String id="Danproof.OptionsTipText" DefaultValue="Indstillinger" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
