<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">

  <!-- IMPORTANT! Id must be unique for your add-in, if you reuse this manifest ensure that you change this id to a new GUID. -->
  <Id>fa9e1dcc-6133-4351-86b8-f0da7f28ad6c</Id>

  <!--Version. Updates from the store only get triggered if there is a version change. -->
  <Version>1.0.0.0</Version>
  <ProviderName>GrammarSoft ApS</ProviderName>
  <DefaultLocale>da-DK</DefaultLocale>
  <DisplayName DefaultValue="Grammateket" />
  <Description DefaultValue="Grammateket" />
  <IconUrl DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />

  <SupportUrl DefaultValue="https://grammarsoft.com/" />
  <AppDomains>
    <AppDomain>retmig.dk</AppDomain>
    <AppDomain>kommaer.dk</AppDomain>
    <AppDomain>gramtrans.com</AppDomain>
    <AppDomain>grammarsoft.com</AppDomain>
    <AppDomain>mv-nordic.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Document" />
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://retmig.dk/gas/dev/html/sidebar-mso.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="Danproof.GetStarted.Title"/>
            <Description resid="Danproof.GetStarted.Description"/>
            <LearnMoreUrl resid="Danproof.GetStarted.LearnMoreUrl"/>
          </GetStarted>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="Danproof.Group1">
                <Label resid="Danproof.Group1Label" />
                <!-- Icons. Required sizes 16,32,80, optional 20, 24, 40, 48, 64. Strongly recommended to provide all sizes for great UX. -->
                <!-- Use PNG icons. All URLs on the resources section must use HTTPS. -->
                <Icon>
                  <bt:Image size="16" resid="Danproof.tpicon_16x16" />
                  <bt:Image size="32" resid="Danproof.tpicon_32x32" />
                  <bt:Image size="80" resid="Danproof.tpicon_80x80" />
                </Icon>

                <Control xsi:type="Button" id="Danproof.TaskpaneButton">
                  <Label resid="Danproof.TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="Danproof.TaskpaneButton.Label" />
                    <Description resid="Danproof.TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Danproof.tpicon_16x16" />
                    <bt:Image size="32" resid="Danproof.tpicon_32x32" />
                    <bt:Image size="80" resid="Danproof.tpicon_80x80" />
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Danproof.Taskpane" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Danproof.tpicon_16x16" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
        <bt:Image id="Danproof.tpicon_32x32" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
        <bt:Image id="Danproof.tpicon_80x80" DefaultValue="https://retmig.dk/gas/dev/imgs/radio-checked.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Danproof.Taskpane" DefaultValue="https://retmig.dk/gas/dev/html/sidebar-mso.html?combined=1" />
        <bt:Url id="Danproof.GetStarted.LearnMoreUrl" DefaultValue="https://grammarsoft.com/" />
      </bt:Urls>
      <!-- ShortStrings max characters==125. -->
      <bt:ShortStrings>
        <bt:String id="Danproof.TaskpaneButton.Label" DefaultValue="Grammateket" />
        <bt:String id="Danproof.Group1Label" DefaultValue="Grammateket" />
        <bt:String id="Danproof.GetStarted.Title" DefaultValue="Kom godt i gang med Grammateket &amp; Kommaforslag!" />
      </bt:ShortStrings>
      <!-- LongStrings max characters==250. -->
      <bt:LongStrings>
        <bt:String id="Danproof.TaskpaneButton.Tooltip" DefaultValue="Klik for at åbne Grammateket &amp; Kommaforslag" />
        <bt:String id="Danproof.GetStarted.Description" DefaultValue="Grammateket er nu installeret. Gå til fanen Hjem og klik på Grammateket for at komme i gang." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
