<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>cbe66aa9-afb7-4892-844e-51bdb68c9144</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>GrammarSoft ApS</ProviderName>
  <DefaultLocale>da-DK</DefaultLocale>
  <DisplayName DefaultValue="RetMig og Kommaforslag (dev)" />
  <Description DefaultValue="RetMig og Kommaforslag (dev)" />
  <IconUrl DefaultValue="https://retmig.dk/gas/dev/grammarsoft/imgs/logo-32.png" />
  <HighResolutionIconUrl DefaultValue="https://retmig.dk/gas/dev/grammarsoft/imgs/logo-80.png"/>
  <SupportUrl DefaultValue="https://grammarsoft.com" />
  <AppDomains>
    <AppDomain>retmig.dk</AppDomain>
    <AppDomain>kommaer.dk</AppDomain>
    <AppDomain>gramtrans.com</AppDomain>
    <AppDomain>grammarsoft.com</AppDomain>
  </AppDomains>

 <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <!-- Office.context.mailbox.item: <Office.MessageCompose>.body.getAsync / setAsync requires Mailbox API 1.3 -->
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/sidebar.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
      <!--If you opt to include RequestedHeight, it must be between 32px to 450px, inclusive.-->

      <!-- 
      <TabletSettings>
          <RequestedHeight>360</RequestedHeight>
          <SourceLocation DefaultValue="https://MyDomain.com/website.html" />
      </TabletSettings>
      <PhoneSettings>
          <SourceLocation DefaultValue="https://MyDomain.com/website.html" />
      </PhoneSettings>
        -->
    </Form>
  </FormSettings>



  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- <FunctionFile resid="Commands.Url"/> -->
          <!-- Message Compose -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeCmdGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <!-- <Control xsi:type="Button" id="msgComposeGrammarSoft">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control> -->
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://retmig.dk/gas/dev/grammarsoft/imgs/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://retmig.dk/gas/dev/grammarsoft/imgs/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://retmig.dk/gas/dev/grammarsoft/imgs/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/sidebar.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="RetMig og Kommaforslag (dev)"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="RetMig og Kommaforslag (dev)"/>
        <!-- <bt:String id="ActionButton.Label" DefaultValue="Perform an action"/> -->
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Klik for at åbne RetMig og Kommaforslag"/>
        <!-- <bt:String id="ActionButton.Tooltip" DefaultValue="RetMig og Kommaforslag er nu installeret. Gå til fanen Hjem og klik på RetMig og Kommaforslag for at komme i gang."/> -->
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>